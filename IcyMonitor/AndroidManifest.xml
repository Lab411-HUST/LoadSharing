<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lab411.icymonitor"
          android:versionCode="13"
          android:versionName="2.0.1">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <supports-screens
        android:xlargeScreens="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- For autodetection -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="com.lab411.icymonitor.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.lab411.icymonitor.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:backupAgent=".IcyBackupAgent"
        android:theme="@style/AppBaseTheme">
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIeHxa7pnxpNcTYY2xFHwefQo01zuWy3dGm1IMEA" />

        <activity
            android:name="com.lab411.icymonitor.activities.MainViewActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.lab411.icymonitor.activities.EditActivity"
            android:label="@string/activity_title_picker"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity
            android:name="com.lab411.icymonitor.activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.lab411.icymonitor.activities.AboutActivity"
            android:label="@string/menu_main_about" />
        <activity
            android:name="com.lab411.icymonitor.activities.ConnectionActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lab411.icymonitor.activities.AddServerActivity"
            android:label="@string/menu_add_server"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name="com.lab411.icymonitor.activities.DetectServerActivity"
            android:label="@string/menu_add_server"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity
            android:name="com.lab411.icymonitor.activities.AddNotificationActivity"
            android:label="@string/notifications"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />

        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.lab411.icymonitor" />
            </intent-filter>
        </receiver>
    </application>
</manifest>